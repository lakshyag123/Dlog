  <main>
  
      
    <% blogs.forEach(function(blog){ %>
    <%  if(usercheck==blog.user_id){ %>
  <section class="container" >
      <div class="site-content" style="grid-template-columns: 100% 0%;">
          
          <div class="posts">
              <div class="post-content" data-aos="zoom-in" data-aos-delay="200">
                <div class="post-title" style="text-align: center;padding-bottom: 0px;">
                  <div class="box" >
                    <a href="#" id="title"><i class="fab fa-battle-net" style="color:#178D27 ;"></i> <%= blog.title %></a></div>
                  </div>
                  <div class="post-image">
                      <div>
                        <% if(blog.image!=null){ %>
                        <img src="/uploads/<%= blog.image %>" class="img" alt="blog1">
                        <%  } %>
                      </div>
                      <div class="post-info flex-row">
                          <span><i class="fas fa-user text-gray"></i>&nbsp;&nbsp;<%= blog.user %></span>
                          <span><i class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp;<%= blog.created %></span>
                      </div>
                  </div>
                  <div class="post-title" style="text-align: center;padding-bottom: 0px;">
                      
                    <div class="message-body" style="border-color: chartreuse;">
                      <p id="content"><%= blog.content %></p>
                      </div>
                      
                      <a href="/blogs/<%= blog._id %>/edit">
                        <button type="button" class="btn btn-primary" id="edbut"><i class="fa fa-edit"></i> EDIT</button>
                    </a>
                    
                    <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" style="display: inline-block;">
                        <button class="btn btn-danger" id="edbut"><i class="fa fa-trash"></i> DELETE</button>
                    </form> 
                  </div>
              </div>
            <br>
              
  </section>
  <hr class="rounded1" style="margin-right: 8%;margin-left: 10%;padding-bottom: 10px;margin-top:0px ;">
<% }}) %>
  
  </main>
